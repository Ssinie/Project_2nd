<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--정보 압력 insert.-->
<!--파라미터 받을 시 오류날 때, jdbcType = VARCHAR 추가.-->
<mapper namespace = "question">
	<select id = "qSelect" resultType = "qDTO" parameterType = "qDTO">
		select * from question where num = 1
	</select>
	<select id = "qSelect02" resultType = "qDTO" parameterType = "qDTO">
		select * from question where num = 2
	</select>
	<insert id = "pInsert" parameterType = "pDTO">
		insert into pinfo values(
			#{nick, jdbcType = VARCHAR},
			#{age},
			#{weight},
			#{height},
			#{gender, jdbcType = VARCHAR},
			sysdate,
			#{qcount},
			#{ref}
		)
	</insert>
</mapper>